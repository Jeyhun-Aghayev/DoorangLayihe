@using Layihe.Areas.Manage.Models.Post
@model CreatePostVm
<div class="container">
    <div class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-8 d-flex" style="box-sizing:border-box">
                <div class="mb-6" style="margin-bottom:10px;max-width:510px;">
                    <label asp-for="Image" class="form-label">Image</label>
                    <input asp-for="Image" style="width:500px;height:150px;">
                    </input>
                    <span asp-validation-for="Image" style="color:red"></span>
                </div>
                <div asp-validation-summary="All" class="text-danger" style="margin-top:20px;margin-left:20px;right:0;"></div>
            </div>
            <div class="mb-6">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Author" class="form-label">Author</label>
                <input asp-for="Author" class="form-control">
                <span asp-validation-for="Author" style="color:red"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
