@model List<Post>


<div  style="width:100%;margin:10px">
    <h1>Post Table</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">No#</th>
            <th scope="col">Id</th>
            <th scope="col" width="250px">Image</th>
            <th scope="col" width="250px">Title</th>
            <th scope="col" width="300px">Author</th>
            <th scope="col" width="500px">Description</th>
            <th width="200px"> <a class="btn btn-primary" style="width:80px;height40px" asp-action="Create" asp-controller="Post" asp-area="Manage">Create</a></th>
        </tr>   
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Id</td>
                <td><div style="width:200px;height:200px;"><img width="200px" height="200px" src="~/Upload/PostImage/@item.ImgUrl" /></div></td>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-controller="Post" asp-area="Manage"asp-route-id="@item.Id" >Update</a>
                        <a class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item')" asp-action="Delete" asp-controller="Post" asp-route-id="@item.Id" asp-area="Manage">Delete</a>
                </td>
            </tr>
        }

    </tbody>
    </table>
</div>